<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.parrot.drone.groundsdkdemo.settings.TargetTrackerSettingsActivity">

    <com.parrot.drone.groundsdkdemo.settings.RangedSettingView
        android:id="@+id/horizontal_framing_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:format="double_format"
        app:title="@string/property_target_tracker_horizontal_framing"/>

    <com.parrot.drone.groundsdkdemo.settings.RangedSettingView
        android:id="@+id/vertical_framing_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:format="double_format"
        app:title="@string/property_target_tracker_vertical_framing"/>

</LinearLayout>